<?xml version='1.0' encoding='utf-8'?>
<widget id="com.fliplet.david" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Notification">
        <param name="android-package" value="org.apache.cordova.dialogs.Notification" />
    </feature>
    <feature name="File">
        <param name="android-package" value="org.apache.cordova.file.FileUtils" />
        <param name="onload" value="true" />
    </feature>
    <allow-navigation href="cdvfile:*" />
    <feature name="CordovaHttpPlugin">
        <param name="android-package" value="com.synconset.CordovaHttpPlugin" />
    </feature>
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
        <param name="onload" value="true" />
    </feature>
    <name>FlipletApp</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-navigation href="*" />
    <allow-intent href="*" />
    <icon src="res/s-app-icon.png" />
    <allow-intent href="market:*" />
    <splash density="land-hdpi" src="res/splash.png" />
    <splash density="land-ldpi" src="res/splash.png" />
    <splash density="land-mdpi" src="res/splash.png" />
    <splash density="land-xhdpi" src="res/splash.png" />
    <splash density="port-hdpi" src="res/splash.png" />
    <splash density="port-ldpi" src="res/splash.png" />
    <splash density="port-mdpi" src="res/splash.png" />
    <splash density="port-xhdpi" src="res/splash.png" />
    <preference name="loglevel" value="DEBUG" />
</widget>
